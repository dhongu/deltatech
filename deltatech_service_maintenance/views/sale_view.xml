<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="invoice_cancel" position="after">
                    <button name="new_notification" type="object" string="New Notification"
                            attrs="{'invisible': ['|',('notification_id','!=',False ),('state','not in',('draft','sent'))]}"/>
                </button>
                <field name="invoiced" position="after">
                    <field name="notification_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>