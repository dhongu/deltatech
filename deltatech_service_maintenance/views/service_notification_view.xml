                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><t
                                                t-esc="record.partner_id.value"
                                            /></span></strong>
                                    </div>
<!--                                    <strong><field name="amount_total" widget="monetary"/></strong>-->
