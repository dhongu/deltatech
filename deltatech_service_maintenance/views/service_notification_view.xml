<?xml version="1.0" ?>
<odoo>

    <record id="view_service_notification_tree" model="ir.ui.view">
        <field name="name">notification</field>
        <field name="model">service.notification</field>
        <field name="arch" type="xml">
            <tree string="Services notification" default_order='date DESC'>
                <field name="name" />
                <field name="date" />
                <field name="type" />
                <field name="category" />
                <field name="equipment_id" />
                <field name="partner_id" />
                <field name="subject" />
                <field name="user_id" />
                <field name="contact_id" />
                <field name='state' />
                <field name="message_unread" invisible="1" />
            </tree>
        </field>
    </record>


            <record id="view_service_notification_form" model="ir.ui.view">
                <field name="name">notification</field>
                <field name="model">service.notification</field>
                <field name="arch" type="xml">
                    <form string="Services Notification">
                        <header>
                            <span
                        attrs="{'invisible': ['|','|', ('piking_id','!=',False ),('sale_order_id','!=',False),('required_order_id','!=',False)]}"
                    >
                                <button
                            name="new_delivery_button"
                            type="object"
                            string="New Delivery"
                            attrs="{'invisible': [('category','!=','delivery' )]}"
                        />
                                <button
                            name="new_transfer_button"
                            type="object"
                            string="New Transfer"
                            attrs="{'invisible': [('category','!=','transfer' )]}"
                        />
                                <button
                            name="new_sale_order_button"
                            type="object"
                            string="New Sale Order"
                            attrs="{'invisible': [('category','!=','sale'     )]}"
                        />
                                <button
                            name="new_required_order_button"
                            type="object"
                            string="New Required Order"
                            attrs="{'invisible': [('category','!=','required')]}"
                        />
                            </span>
                            <button
                        name="action_assing"
                        type="object"
                        string="Assign"
                        class="oe_highlight"
                        states="new"
                    />
                            <button name="action_taking" type="object" string="Taking " states="new" />
                            <button
                        name="action_start"
                        type="object"
                        string="Start"
                        class="oe_highlight"
                        states="assigned"
                    />
                            <button
                        name="action_cancel_assing"
                        type="object"
                        string="Assign Cancel"
                        states="assigned,progress"
                    />
                            <button
                        name="action_order"
                        type="object"
                        string="Service Order"
                        states="progress"
                        attrs="{'invisible': [('order_id','!=',False)]}"
                    />
                            <button
                        name="action_done"
                        type="object"
                        class="oe_highlight"
                        string="Done"
                        states="progress"
                    />
                            <field name="state" widget="statusbar" />
                        </header>
                        <sheet>
                            <h1>
                                <field
                            name="name"
                            class="oe_inline"
                            attrs="{'invisible': [('name','=','/')]}"
                            readonly="1"
                        />
                            </h1>
                            <group>
                                <group>
                                    <field name="date" />
                                    <field name="type" />
                                    <field name="category" />
                                    <field name="user_id" />
                                    <field name="order_id" />
                                    <field
                                name="piking_id"
                                attrs="{'invisible': [('piking_id','=',False ),'|',('category','!=','delivery' ),('category','!=','transfer' )]}"
                            />
                                    <field
                                name="sale_order_id"
                                attrs="{'invisible': [('category','!=','sale' ),('sale_order_id','=',False)]}"
                            />
                                    <field
                                name="required_order_id"
                                attrs="{'invisible': [('category','!=','required' ),('required_order_id','=',False)]}"
                            />
                                </group>
                                <group>
                                    <field
                                name="contact_id"
                                context="{'search_default_customer':1,   'show_phone':1}"
                                options="{'always_reload': True}"
                            />
                                    <field
                                name="equipment_id"
                                attrs="{'required': [('category','in',('delivery') )]}"
                            />
                                    <field
                                name="partner_id"
                                attrs="{'required': [('category','in',('delivery','sale') )]}"
                            />
                                    <field
                                name="address_id"
                                domain="['|',('parent_id','child_of',partner_id),('id','=',partner_id)]"
                                context="{'search_default_customer':1, 'show_address': 1 }"
                                options="{'always_reload': True}"
                            />
                                    <field name="agreement_id" />
                                    <field name="equipment_history_id" invisible="1" />
                                </group>
                                <group>
                                    <field name="priority" widget="priority" />
                                    <field name="subject" />
                                    <field name="description" />
                                </group>
                                <group>
                                    <field name="date_assing" />
                                    <field name="date_start" />
                                    <field name="date_done" />
                                </group>
                            </group>
                            <field name="item_ids">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <field name="quantity" />
                                    <field name="product_uom" />
                                    <field name="note" />
                                </tree>
                            </field>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                            <field name="message_ids" widget="mail_thread" placeholder="Share a message..." />
                        </div>
                    </form>
                </field>
            </record>
