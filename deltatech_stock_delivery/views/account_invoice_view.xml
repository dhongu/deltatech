<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">related.pickings.account.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!--        <button name="action_invoice_open" position="after">
                        <button name="invoice_print_delivery" string="Delivery" type="object"
                                  groups="base.group_user"/>
                    </button>-->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    type="object"
                    name="invoice_print_delivery"
                    class="oe_stat_button"
                    icon="fa-truck"
                    attrs="{'invisible':[('move_type', 'not in', ('out_invoice', 'out_refund'))]}"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Delivery</span>
                    </div>
                </button>
                <button
                    type="object"
                    name="invoice_print_delivery"
                    class="oe_stat_button"
                    icon="fa-truck"
                    attrs="{'invisible':[('move_type', 'not in', ( 'in_invoice', 'in_refund'))]}"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Reception</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
