<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_consume" model="ir.actions.act_window">
        <field name="name">Consume</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_mrp_simple_form" model="ir.ui.view">
        <field name="name">mrp.simple</field>
        <field name="model">mrp.simple</field>
        <field name="arch" type="xml">
            <form string="Transfer">
                <header>
                    <field name="consume_id" invisible="1" />
                    <button
                        name="do_transfer"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        invisible="state!='draft'"
                    />
                    <button
                        name="compute_finit_price"
                        type="object"
                        string="Recompute prices"
                        invvisible="state!='draft'"
                    />
                    <button type="object" name="add_multiple_lines" string="Add lines" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            class="oe_stat_button"
                            id="consume_button"
                            icon="fa-angle-down"
                            name="open_consume"
                            invisible="state=='draft'"
                        >
                            <span class="o_stat_text">Consume</span>
                        </button>
                        <button
                            type="object"
                            class="oe_stat_button"
                            id="consume_button"
                            icon="fa-angle-up"
                            name="open_receipt"
                            invisible="state=='draft'"
                        >
                            <span class="o_stat_text">Receipt</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date" readonly="state!='draft'" />
                            <field name="sale_order_id" readonly="state!='draft'" />
                        </group>
                        <group>
                            <field name="validation_consume" readonly="state!='draft'" />
                            <field name="validation_receipt" readonly="state!='draft'" />
                        </group>
                        <group>
                            <field name="picking_type_consume" readonly="state!='draft'" />
                            <field name="picking_type_receipt_production" readonly="state!='draft'" />
                        </group>
                        <group groups="deltatech_mrp_simple.group_sale_simple_production">
                            <field name="auto_create_sale" />
                            <field
                                name="partner_id"
                                invisible="auto_create_sale==False"
                                required="auto_create_sale==True"
                            />
                            <field
                                name="final_product_name"
                                invisible="auto_create_sale==False"
                                required="auto_create_sale==True"
                            />
                            <field
                                name="final_product_qty"
                                invisible="auto_create_sale==False"
                                required="auto_create_sale==True"
                            />
                            <field
                                name="final_product_uom_id"
                                invisible="auto_create_sale==False"
                                required="auto_create_sale==True"
                            />
                            <field
                                name="final_product_category"
                                invisible="auto_create_sale==False"
                                required="auto_create_sale==True"
                            />
                        </group>
                    </group>

                    <group string="Consumption">

                        <field name="product_out_ids" nolabel="1" readonly="state!='draft'">
                            <tree editable="bottom">
                                <field name="product_id" />
                                <field name="stock" />
                                <field name="quantity" sum="1" />
                                <field name="price_unit" readonly="1" force_save="1" />
                                <field name="uom_id" />
                                <field name="value" sum="1" />
                            </tree>
                        </field>
                    </group>
                    <group string="Receipt">
                        <field name="product_in_ids" nolabel="1" readonly="state!='draft'">
                            <tree editable="bottom">
                                <field name="product_id" />
                                <field name="quantity" sum="1" />
                                <field name="uom_id" />
                                <field name="price_unit" />
                                <field name="value" sum="1" />
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="mrp_simple_tree" model="ir.ui.view">
        <field name="name">mrp.simple.tree</field>
        <field name="model">mrp.simple</field>
        <field name="arch" type="xml">
            <tree string="Simple production">
                <field name="name" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record id="action_mrp_simple" model="ir.actions.act_window">
        <field name="name">Simple Production</field>
        <field name="res_model">mrp.simple</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>


    <menuitem
        id="menu_mrp_simple"
        name="Simple Production"
        action="action_mrp_simple"
        parent="stock.menu_stock_warehouse_mgmt"
    />
</odoo>
