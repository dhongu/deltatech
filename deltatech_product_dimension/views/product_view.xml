<?xml version="1.0" ?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <label for="volume" position="before">
                <label for="product_length" string="Dimension" />
                <div class="o_row">
                    <field name="product_length" placeholder="Length" />x
                    <field name="product_width" placeholder="Width" />x
                    <field name="product_height" placeholder="Height" />
                    cm
                </div>
            </label>
        </field>
    </record>


