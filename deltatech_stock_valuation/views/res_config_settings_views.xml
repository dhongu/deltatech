<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50" />
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='valuation_setting_container']" position="inside">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_deltatech_stock_valuation" />
                    </div>
                    <div class="o_setting_right_pane" name="deltatech_brand_field">
                        <label for="module_deltatech_stock_valuation" />
                        <div class="text-muted">
                            Set the valuation area level and the valuation area for the company.
                        </div>
                        <div class="content-group">
                            <div class="row">
                                <label for="valuation_area_level" string="Level" class="col-lg-3 o_light_label" />
                                <field name="valuation_area_level" class="oe_inline" />
                            </div>
                            <div class="row" attrs="{'invisible': [('valuation_area_level', '!=', 'company')]}">
                                <label for="valuation_area_id" string="Area" class="col-lg-3 o_light_label" />
                                <field name="valuation_area_id" class="oe_inline" />

                            </div>
                            <div>
                                <button
                                    type="object"
                                    name="refresh_stock_valuation"
                                    icon="fa-refresh"
                                    string="Refresh Valuation"
                                    class="btn-link"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
