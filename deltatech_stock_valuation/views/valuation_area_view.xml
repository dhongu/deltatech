<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="valuation_area_view_tree" model="ir.ui.view">
        <field name="name">valuation.area.view.tree</field>
        <field name="model">valuation.area</field>
        <field name="arch" type="xml">
        <tree string="Valuation Area">
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
        </tree>
        </field>
    </record>

    <record id="valuation_area_view_form" model="ir.ui.view">
        <field name="name">valuation.area.view.form</field>
        <field name="model">valuation.area</field>
        <field name="arch" type="xml">
            <form string="Valuation Area">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record id="valuation_area_action" model="ir.actions.act_window">
        <field name="name">Valuation Area</field>
        <field name="res_model">valuation.area</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        id="menu_valuation_area"
        action="valuation_area_action"
        name="Valuation Area"
        parent="stock.menu_product_in_config_stock"
    />

</odoo>
