<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_advance_payment_inv" model="ir.ui.view">
        <field name="name">Invoice Orders</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
        <field name="arch" type="xml">
            <field name="advance_payment_method" position="before">
                <field name="journal_id" />
                <field name="payment_term_id" invisible="advance_payment_method=='percentage'" />
                <field name="is_currency_rate_custom" />
                <field name="currency_rate" invisible="is_currency_rate_custom!=True" />
                <field name="order_id" invisible="1" />
            </field>
        </field>
    </record>
</odoo>
