<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">deltatech.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="priority">99</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="before">
                    <label
                        for="id_nr"
                        string="Card ID Number"
                        invisible="is_company==True or type!='contact'"
                    />
                    <div class="o_row" invisible="is_company==True or type!='contact'">
                        <field name="id_series" />
                        <field name="id_nr" />

                    </div>
                    <label
                        for="id_issued_by"
                        string="Card ID Issued"
                        invisible="is_company==True or type!='contact'"
                    />
                    <div class="o_row" invisible="is_company==True or type!='contact'">
                        <field name="id_issued_by" placeholder="SPCLEP .." />
                        <field name="id_issued_at" placeholder="Ex: 01.01.2000" />
                    </div>
                    <field name="cnp" invisible="is_company==True or type!='contact'"/>
                    <field
                        name="birthdate"
                        invisible="is_company==True or type!='contact'"
                    />
                    <field
                        name="gender"
                        invisible="is_company==True or type!='contact'"
                    />
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="mean_transp" invisible="is_company==True"/>
                </xpath>

                <xpath expr="//field[@name='child_ids']/form/sheet/group" position="inside">
                    <group name="person_id" invisible="type!='contact'">
                        <label
                            for="id_nr"
                            string="Card ID Number"
                            invisible="is_company==True or type!='contact'"
                        />
                        <div
                            class="o_row"
                            invisible="is_company==True or type!='contact'"
                        >
                            <field name="id_series" />
                            <field name="id_nr" />

                        </div>
                        <label
                            for="id_issued_by"
                            string="Card ID Issued"
                            invisible="is_company==True or type!='contact'"
                        />
                        <div
                            class="o_row"
                            invisible="is_company==True or type!='contact'"
                        >
                            <field name="id_issued_by" placeholder="SPCLEP .." />
                            <field name="id_issued_at" placeholder="Ex: 01.01.2000" />
                        </div>
                        <field name="cnp" />
                        <field name="birthdate" />
                        <field name='gender' />

                        <field name='is_company' invisible="1" />
                        <field name="mean_transp" />
                    </group>
                </xpath>
                <!--                &lt;!&ndash;Pentru eroarea care apare cand numele este gol&ndash;&gt;
                                <xpath expr="//field[@name='child_ids']/form/sheet//field[@name='name']" position="replace">
                                    <field name="name" string="Contact Name" required="1" />
                                </xpath>-->
            </field>
        </record>
        <record id="view_partner_simple_form" model="ir.ui.view">
            <field name="name">res.partner.simplified.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <group name="person_id" invisible="is_company==True">
                        <label
                            for="id_nr"
                            string="Card ID Number"
                            invisible="is_company==True or type!='contact'"
                        />
                        <div
                            class="o_row"
                           invisible="is_company==True or type!='contact'"
                        >
                            <field name="id_series" />
                            <field name="id_nr" />

                        </div>
                        <label
                            for="id_issued_by"
                            string="Card ID Issued"
                            invisible="is_company==True or type!='contact'"
                        />
                        <div
                            class="o_row"
                            invisible="is_company==True or type!='contact'"
                        >
                            <field name="id_issued_by" placeholder="SPCLEP .." />
                            <field name="id_issued_at" placeholder="Ex: 01.01.2000" />
                        </div>
                        <field name="cnp" />
                        <field name="birthdate" />
                        <field name='gender' />

                        <field name="mean_transp" />
                    </group>
                </xpath>
            </field>
        </record>
        <!-- Partner Kanban View -->
        <record model="ir.ui.view" id="deltatech_res_partner_kanban_view">
            <field name="name">deltatech.res.partner.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field name="arch" type="xml">
                <field name="is_company" position="after">
                    <field name="vat" />
                </field>
                <xpath expr="//div[hasclass('oe_kanban_details')]//ul/li" position="after">
                    <li t-if="record.vat">
                        <field name="vat" invisible="is_company==False"/>
                    </li>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
